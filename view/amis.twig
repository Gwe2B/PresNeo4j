{% extends "templates/connected.twig" %}

{% block mainContent %}
        	
			<div class="column stackable ui grid" style="height:100%">
                 <div class="six wide column">
                       <div class="ui segment" style="height:100%">
					   
					       <h1 style="  text-align: center; font-size: 40px"><i class="users icon"></i></h1>
                           <div role="list" class="ui divided relaxed list">
                                     {% for friend in friends %}
                                        <div role="listitem" class="item">
                                            <i aria-hidden="true" class="user large icon middle aligned"></i>
                                            <div class="content">
                                                 <a class="header" href="?profilAmi&friendId={{friend.id}}">{{friend.prenom}}   {{friend.nom}}</a>
                                            </div>
                                        </div>
                                     {% endfor %}
                            </div>
                  
					   </div>
                 </div>
				 
                 <div class="ten wide column">
                     <div class="ui segment" style="height:100%">				  
	 	
                 		<h1 style="  text-align: center; font-size: 30px">Chercher un profil <i class="user icon"></i></h1><br/>
       
					     <div class="ui search" style="text-align:center">
                             <div class="ui icon input" style="width:80%">
                                 <input class="prompt" type="text" placeholder="Saisir l'email...">
                                 <i class="search icon"></i>
                             </div>
                             <div class="results"></div>
                        </div>

                    </div>
                </div>
            </div>

{% endblock %}